.index-wrap
  margin-bottom 50px;
  margin-top 5rem
  .index-posts-item
    position: relative;
    background-color: #fff;
    margin: 10px;
    padding: 10px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border-bottom: 1px solid #c9c9c9;
  .index-clip_words_2
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  .index-item_title_bottom
    position relative
    margin-bottom: 10px;
  .index-pic_item_title
    width: 100%;
    font-size: 15px;
    color: #000;
    line-height: 30px;
    position relative
  .index-item-icon
    position absolute
    right 10px;
    top 0

.index-date
  font-size 12px
  color #222
  position absolute
  top 0
  right 10px

.index-title
  padding 5px 10px;
  color #fff
  -webkit-border-radius 5px

.index-post-wrap
  position relative

.index-desc-wrap
  position absolute
  width 100%
  bottom 0
  background-color rgba(0,0,0,.5);
  color #fff
  font-size 12px
  height 40px
  p
    margin-top 6px
    line-height 40px
    padding 0 5px
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 14px
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
