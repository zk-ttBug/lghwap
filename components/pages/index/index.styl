

.gw-theme i {
  height: 21px;
  width: 5px;
  display: inline-block;
  margin-right: 6px;
  position: absolute;
  left: 0;
}

.gw-theme-pink {
  background-color: #ff7514;
}

.gw-theme {

  padding-left: 11px;
  display: -webkit-box;
  -webkit-box-pack: justify;
  color: #999;
  font-size: 15px;
  height: 21px;
  line-height: 21px;
  position: relative;
}

.gw-pic-wrap {
  display: -webkit-box;
  -webkit-box-pack: justify;
}

.gw-pic-wrap a:first-child {
  margin: 0 2px 4px 0;
}
.gw-pic-wrap .gw-pic-item {
  -webkit-box-flex: 1;
  -webkit-box-sizing: border-box;
  width: 25%;
}
.gw-pic-wrap a {
  display: block;
  position: relative;
  max-height: 154px;
  margin: 0 2px 4px 2px;
}

.imgblock {
  display: block;
  width: 100%;
  height: 112px;
  min-height: 55px;
}

.cover-tips {
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}
.cover-tips {
  width 100%
  text-align center
  height: 25px;
  background-color: rgba(0,0,0,0.3);
  color: #fff;
  font-size: 12px;
  line-height: 25px;
  position: absolute;
  bottom: 0px;
}

