.index-nav {
  position: fixed;
  z-index: 96;
  top: 0;
  padding-top: 5rem;
  width: 100%;
  height: 3.125rem;
  overflow-x: scroll;
  overflow-y: hidden;
  background: #fff;
  -webkit-overflow-scrolling: touch;
}


.index-nav-ul {
  height: 3.125rem;
  white-space: nowrap;
}
ul, ol, menu {
  list-style: none;
}

.index-nav-ul li:first-child {
  padding-left: .9375rem;
}
.index-nav-ul li {
  display: inline-block;
  padding-left: 1.84375rem;
  overflow: hidden;
}

.index-nav-ul .on a {
  color: #ff7514;
  border-bottom: .125rem #ff7514 solid;
}

.index-nav-ul li a {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box;
  box-sizing: border-box;
  display: block;
  padding: .5rem .1rem;
  height: 100%;
  color: #000;
  font-size: .825rem;
  line-height: .825rem;
}