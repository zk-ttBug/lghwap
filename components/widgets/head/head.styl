.index-logo
  width 64px
  text-align center

.index-head
  position: relative;
  width: 100%;
  height 7.25rem;
  min-width: 320px;
  overflow-x: hidden;

.header-default {
  position: fixed;
  top: 0;
  z-index: 100;
  width: 100%;
  color: #000;
  background: #fff;
  text-align: center;
  border: 0;
}

.header-theme-1 {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: box;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #dcd8d8;
}

.header-default .title {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-box;
  display: -o-box;
  display: box;
  -webkit-box-pack: center;
  -moz-box-pack: center;
  -o-box-pack: center;
  -ms-box-pack: center;
  box-pack: center;
  -webkit-box-align: center;
  -moz-box-align: center;
  -o-box-align: center;
  -ms-box-align: center;
  box-align: center;
  padding 10px;
}
.header-theme-1 .title {
  -webkit-box-flex: 1;
  box-flex: 1;
  width: auto;
  height: 3rem;
  font-size: .9375rem;
  font-weight: 400;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: nowrap;
}