.index-logo
  font-size 1.5rem
  text-align center

.index-head
  position: relative;
  width: 100%;
  height 2rem;
  min-width: 320px;
  overflow-x: hidden;

.index-logo-txt
  font-size 1.25rem

.header-default {
  position: fixed;
  top: 0;
  z-index: 100;
  width: 100%;
  color: #fff;
  background: #fff;
  text-align: center;
  border: 0;
}

.header-theme-1 {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: box;
  width: 100%;
  background: #b71c1c;
  //-moz-box-shadow: 0px 2px 2px #999; /* 老的 Firefox */
  //box-shadow: 0px 2px 2px #999;
}

.header-default .title {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-box;
  display: -o-box;
  display: box;
  -webkit-box-pack: center;
  -moz-box-pack: center;
  -o-box-pack: center;
  -ms-box-pack: center;
  box-pack: center;
  -webkit-box-align: center;
  -moz-box-align: center;
  -o-box-align: center;
  -ms-box-align: center;
  box-align: center;
  padding 10px;
}
.header-theme-1 .title {
  -webkit-box-flex: 1;
  box-flex: 1;
  width: auto;
  font-size: .9375rem;
  font-weight: 400;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: nowrap;
}